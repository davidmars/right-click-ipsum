{
    "manifest_version": 2,

    "name": "Right click ipsum",
    "description": "Right click and insert Lorem Ipsum :)",
    "version": "0.1",
    "icons": {
        "16":   "icon-16.png",
        "32":   "icon-32.png",
        "48":   "icon-48.png",
        "128":  "icon-128.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite"
    ],
    "background": {
        "scripts": ["bg.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}